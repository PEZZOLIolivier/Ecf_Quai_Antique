{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="border border-1 rounded-3 m-1 p-1 w-50">
        <h1>Enregistrement</h1>
        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.defaultAllergy) }}
        {{ form_row(registrationForm.defaultNbPlaces) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}
        <button type="submit" class="btn btn-outline-light btn-lg validation-button m-1">S'enregistrer</button>
        {{ form_end(registrationForm) }}
    </div>



{% endblock %}
